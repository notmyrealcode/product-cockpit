{
  "name": "product-cockpit",
  "displayName": "Product Cockpit",
  "description": "Task management for AI coding agents",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pmcockpit-shortcut",
          "title": "Product Cockpit",
          "icon": "resources/icon.svg"
        }
      ],
      "secondarySidebar": [
        {
          "id": "pmcockpit",
          "title": "Product Cockpit",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "pmcockpit": [
        {
          "type": "webview",
          "id": "pmcockpit.taskView",
          "name": "Tasks",
          "when": "pmcockpit.initialized"
        }
      ],
      "pmcockpit-shortcut": [
        {
          "id": "pmcockpit.shortcutView",
          "name": "Product Cockpit",
          "when": "pmcockpit.initialized"
        }
      ]
    },
    "commands": [
      {
        "command": "pmcockpit.initialize",
        "title": "Product Cockpit: Initialize"
      },
      {
        "command": "pmcockpit.openSidebar",
        "title": "Open Product Cockpit",
        "icon": {
          "light": "resources/icon.svg",
          "dark": "resources/icon.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "pmcockpit.openSidebar",
          "group": "navigation",
          "when": "pmcockpit.initialized"
        }
      ]
    },
    "configuration": {
      "title": "Product Cockpit",
      "properties": {
        "pmcockpit.parserModel": {
          "type": "string",
          "default": "haiku",
          "description": "Claude model used for parsing voice and text input into tasks. Haiku is fast and cheap, Sonnet is more capable.",
          "enum": [
            "haiku",
            "sonnet",
            "opus"
          ],
          "enumDescriptions": [
            "Haiku - Fast and cheap (recommended)",
            "Sonnet - More capable, slower",
            "Opus - Most capable, slowest"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "build:webview": "node esbuild.js",
    "build:webview:prod": "node esbuild.js --production",
    "watch:webview": "node esbuild.js --watch",
    "compile": "tsc -p ./ && npm run build:webview",
    "watch": "concurrently \"tsc -watch -p ./\" \"npm run watch:webview\"",
    "lint": "eslint src --ext ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/diff": "^7.0.2",
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/sql.js": "^1.4.9",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/ui": "^4.0.15",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.1",
    "eslint": "^8.54.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.3.0",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "diff": "^8.0.2",
    "lucide-react": "^0.560.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sql.js": "^1.13.0",
    "tailwind-merge": "^3.4.0",
    "uuid": "^9.0.1"
  }
}
