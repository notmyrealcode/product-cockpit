{
  "name": "shepherd",
  "displayName": "Shepherd",
  "description": "Product copilot for AI coding agents",
  "version": "0.0.9",
  "private": true,
  "publisher": "JustinEckhouse",
  "author": "Justin Eckhouse",
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:shepherd.welcomeView",
    "onView:shepherd.shortcutView",
    "onCommand:shepherd.openWalkthrough",
    "onCommand:shepherd.initialize",
    "onCommand:shepherd.setupVoice",
    "onCommand:shepherd.skipVoiceSetup",
    "onCommand:shepherd.openSidebar"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "shepherd-shortcut",
          "title": "Shepherd",
          "icon": "resources/icon.svg"
        }
      ],
      "secondarySidebar": [
        {
          "id": "shepherd",
          "title": "Shepherd",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "shepherd": [
        {
          "type": "webview",
          "id": "shepherd.taskView",
          "name": "Tasks",
          "when": "shepherd.initialized"
        }
      ],
      "shepherd-shortcut": [
        {
          "id": "shepherd.welcomeView",
          "name": "Shepherd",
          "when": "!shepherd.initialized"
        },
        {
          "id": "shepherd.shortcutView",
          "name": "Shepherd",
          "when": "shepherd.initialized"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "shepherd.welcomeView",
        "contents": "Get started with Shepherd to manage tasks for AI coding agents.\n\n[Get Started](command:shepherd.openWalkthrough)",
        "when": "workspaceFolderCount > 0"
      },
      {
        "view": "shepherd.welcomeView",
        "contents": "Open a folder or workspace to use Shepherd.\n\n[Open Folder](command:vscode.openFolder)",
        "when": "workspaceFolderCount == 0"
      }
    ],
    "commands": [
      {
        "command": "shepherd.initialize",
        "title": "Shepherd: Initialize"
      },
      {
        "command": "shepherd.openSidebar",
        "title": "Open Shepherd",
        "icon": {
          "light": "resources/icon-color.png",
          "dark": "resources/icon-color.png"
        }
      },
      {
        "command": "shepherd.openWalkthrough",
        "title": "Shepherd: Open Getting Started"
      },
      {
        "command": "shepherd.setupVoice",
        "title": "Shepherd: Set Up Voice Capture"
      },
      {
        "command": "shepherd.skipVoiceSetup",
        "title": "Shepherd: Skip Voice Setup"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "shepherd.openSidebar",
          "group": "navigation",
          "when": "shepherd.initialized"
        }
      ]
    },
    "configuration": {
      "title": "Shepherd",
      "properties": {
        "shepherd.parserModel": {
          "type": "string",
          "default": "haiku",
          "description": "Claude model used for parsing voice and text input into tasks. Haiku is fast and cheap, Sonnet is more capable.",
          "enum": [
            "haiku",
            "sonnet",
            "opus"
          ],
          "enumDescriptions": [
            "Haiku - Fast and cheap (recommended)",
            "Sonnet - More capable, slower",
            "Opus - Most capable, slowest"
          ]
        }
      }
    },
    "walkthroughs": [
      {
        "id": "shepherd.welcome",
        "title": "Shepherd: Get Started",
        "icon": "resources/icon.png",
        "description": "Set up Shepherd to manage tasks with AI coding agents",
        "steps": [
          {
            "id": "shepherd.welcome.init",
            "title": "Initialize Shepherd",
            "description": "Create the `.shepherd/` folder for task storage and configure Claude Code integration.\n\n[Initialize Shepherd](command:shepherd.initialize)",
            "media": {
              "svg": "resources/walkthrough/init.svg",
              "altText": "Initialize"
            },
            "completionEvents": [
              "onContext:shepherd.walkthrough.initDone"
            ]
          },
          {
            "id": "shepherd.welcome.voice",
            "title": "Set Up Voice Capture (Optional)",
            "description": "Dictate tasks using your voice with local speech-to-text powered by whisper.cpp.\n\n[Set Up Voice](command:shepherd.setupVoice)\n\n$(info) [Skip voice setup](command:shepherd.skipVoiceSetup) if you don't need it",
            "media": {
              "svg": "resources/walkthrough/voice.svg",
              "altText": "Voice capture"
            },
            "completionEvents": [
              "onContext:shepherd.walkthrough.voiceDone"
            ]
          },
          {
            "id": "shepherd.welcome.firstTask",
            "title": "Create Your First Task",
            "description": "Click the **+** button in the Shepherd sidebar to add your first task. You can type a title or start an AI requirements interview.\n\n$(check) Mark complete when you've added a task.",
            "media": {
              "svg": "resources/walkthrough/task.svg",
              "altText": "Create task"
            },
            "completionEvents": [
              "onContext:shepherd.walkthrough.taskCreated"
            ]
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile:prod",
    "compile": "tsc --noEmit && node esbuild.js",
    "compile:prod": "tsc --noEmit && node esbuild.js --production",
    "watch": "concurrently \"tsc --noEmit -watch -p ./\" \"node esbuild.js --watch\"",
    "package": "npx @vscode/vsce package --allow-missing-repository",
    "lint": "eslint src --ext ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/adm-zip": "^0.5.7",
    "@types/diff": "^7.0.2",
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/sql.js": "^1.4.9",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/ui": "^4.0.15",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.1",
    "eslint": "^8.54.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.3.0",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@radix-ui/react-tooltip": "^1.2.8",
    "adm-zip": "^0.5.16",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "diff": "^8.0.2",
    "lucide-react": "^0.560.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sql.js": "^1.13.0",
    "tailwind-merge": "^3.4.0",
    "uuid": "^9.0.1"
  }
}
